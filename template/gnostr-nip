  -t gnostr                         \
  --tag gnostr gnostr               \
  --tag weeble $(gnostr-weeble)     \
  --tag wobble $(gnostr-wobble)     \
  --tag block $(gnostr-blockheight) \
  --content "$MESSAGE" && true || help;exit;

} ## end kind0

