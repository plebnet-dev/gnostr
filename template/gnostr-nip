##
WEBSITE=gnostr.org
#echo "$WEBSITE"
DAMUS_DONATION_V2=0
#echo "$DAMUS_DONATION_V2"
#REF: https://github.com/lnurl/luds/blob/luds/06.md
LUD06="randymcmillan@current.tips"
#echo "$LUD06"
#REF: https://github.com/lnurl/luds/blob/luds/16.md
LUD16="randymcmillan@current.tips"
